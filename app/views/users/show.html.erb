<%= form_for @user do |f| %>
  <div class="container">
    <div class="row gutters">
      <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
          <div class="card-body">
            <div class="account-settings">
              <div class="user-profile">
                <div class="user-avatar">
                  <img src="https://gravatar.com/avatar/821e88cedbb1b480df709005bc004a97?s=200&d=robohash&r=x" alt="all users">
                </div>
                <h5 class="user-name"><%=@user.full_name%></h5>
                <h6 class="user-email"><%=@user.email%></h6>
              </div>
            </div>
          </div>
        </div>
        </div>
        <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
        <div class="card h-100">
          <div class="card-body">
            <div class="row gutters">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <h6 class="mb-2 text-primary">Personal Details</h6>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <%= f.label :first_name, 'First Name'%>
                  <%= f.text_field :first_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <%= f.label :last_name, 'Last Name'%>
                  <%= f.text_field :last_name, class: "form-control" %>
                </div>
              </div>
              <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                  <%= f.label :email, 'Email'%>
                  <%= f.text_field :email, class: "form-control" %>
                </div>
              </div>
            </div>
            <div class="row gutters">
              <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="text-right">
                  <button type="button" id="submit" name="submit" class="btn btn-primary">Start A Conversation</button>
                  <%# <button type="button" id="submit" name="submit" class="btn btn-primary">Update</button> %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>